<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2929"
    android:visibility="visible">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/advent_pro_medium"
        android:gravity="center"
        android:text="@string/bienvenida"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <Button
        android:id="@+id/botonCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="122dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="Cerrar Sesion"
        android:textSize="10sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/botonTiendas"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="239dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="@string/tiendas" />

    <Button
        android:id="@+id/botonConsumo"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-29dp"
        android:layout_marginTop="324dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="@string/consumo" />

    <Button
        android:id="@+id/botonWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="409dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="@string/web" />

    <Button
        android:id="@+id/botonSugerencias"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="495dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="@string/sugerencias" />

    <Button
        android:id="@+id/botonUsuario"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Titulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-28dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/bordes_redondos"
        android:fontFamily="@font/cuprum"
        android:text="@string/miPerfil"
        android:visibility="visible" />

</RelativeLayout>